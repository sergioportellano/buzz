generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  nickname  String   @unique
  password  String   // Plaintext for prototype as requested
  createdAt DateTime @default(now())
  
  // Future extensions
  // matches Match[]
}
